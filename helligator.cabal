  build-depends:       base >=4.7 && <4.8
                     , bytestring ==0.10.*
                     , arithmoi ==0.4.*
                     , byteable ==0.1.*
                     , crypto-numbers ==0.2.*
                     , largeword ==1.2.*
                     , binary ==0.7.*
  hs-source-dirs:      
    src
  default-language:    Haskell2010

