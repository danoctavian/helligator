  Type:              exitcode-stdio-1.0
  Hs-source-dirs:    tests
  Main-is:           Properties.hs
  Build-depends:       base >=4.7 && <4.8
                     , helligator
                     , QuickCheck ==2.7.*
                     -- test-framework >= 0.3.3 && < 0.5,
                     -- test-framework-quickcheck2 >= 0.2.9 && < 0.3,
                     -- random == 1.0.*,
